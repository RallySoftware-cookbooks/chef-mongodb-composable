# Data and File System
dbpath = <%= @dbpath %>
<% if @options[:journal] == false -%>
nojournal = true
<% end -%>
<% if @options[:prealloc] == false -%>
noprealloc = true
<% end -%>
<% if @options[:smallfiles] == true -%>
smallfiles = true
<% end -%>

# Logging
logpath = <%= "#{@logpath}/#{@name}.log" %>
logappend = true
verbose = true

# IP and Port
port = <%= @options[:port] %>
<% unless @options[:bind_ip].nil? -%>
bind_ip = <%= @options[:bind_ip] %>
<% end -%>

# Replication
<% unless @options[:replicaset].nil? -%>
replSet = <%= @options[:replicaset] %>
<% end -%>
